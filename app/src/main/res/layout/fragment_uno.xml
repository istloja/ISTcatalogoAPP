<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#178FEF"
    tools:context=".FragmentUno">

    <TextView
        android:id="@+id/textox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:padding="15dp"
        android:text="Agregar producto"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <LinearLayout
        android:id="@+id/liner_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textox2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tv"/>
        <ImageView
            android:id="@+id/gafas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gafas"/>
        <ImageView
            android:id="@+id/laptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/laptop"/>
        <ImageView
            android:id="@+id/musicales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nusicales"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner_layout1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="200dp">

        <ImageView
            android:id="@+id/camaras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camaras"/>
        <ImageView
            android:id="@+id/videojuegos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/videojuego"/>
        <ImageView
            android:id="@+id/libros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/libros"/>
        <ImageView
            android:id="@+id/licores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/licores"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner_layout2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="300dp">

        <ImageView
            android:id="@+id/camiseta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camiseta"/>
        <ImageView
            android:id="@+id/deporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/deporte"/>
        <ImageView
            android:id="@+id/joyas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/joyas"/>
        <ImageView
            android:id="@+id/auriculares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/auriculares"/>


    </LinearLayout>



</FrameLayout>